
@{
    Layout = null;
}

<!doctype html>

<html lang="en"
      class="light-style layout-menu-fixed layout-compact"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="~/wwwroot/assets/"
      data-template="vertical-menu-template-free"
      data-style="light">

@Html.Action("AdminLayoutHead","AdminLayout")

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->

            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <a href="~/" class="app-brand-link">
                        <span class="app-brand-text demo menu-text fw-bold ms-2">Yavuz Yazıcı</span>
                    </a>

                    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                        <i class="bx bx-chevron-left bx-sm d-flex align-items-center justify-content-center"></i>
                    </a>
                </div>

                <div class="menu-inner-shadow"></div>

                <ul class="menu-inner py-1">

                    <!-- Components -->
                    <li class="menu-header small text-uppercase"><span class="menu-header-text">Components</span></li>
                    <!-- Banner -->
                    <li class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Banner" ? "active" : "")">
                        <a href="~/Banner/Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-flag"></i>
                            <div class="text-truncate" data-i18n="Banner">Banner</div>
                        </a>
                    </li>
                    <!-- Social Medias -->
                    <li class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "SocialMedia" ? "active" : "")">
                        <a href="~/SocialMedia/Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bxl-linkedin-square"></i>
                            <div class="text-truncate" data-i18n="Social Medias">Social Medias</div>
                        </a>
                    </li>
                    <!-- About -->
                    <li class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "About" ? "active" : "")">
                        <a href="~/About/Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-male"></i>
                            <div class="text-truncate" data-i18n="About">About</div>
                        </a>
                    </li>
                    <!-- Expertise -->
                    <li class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Expertise" ? "active" : "")">
                        <a href="~/Expertise/Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-exclude"></i>
                            <div class="text-truncate" data-i18n="Expertises">Expertises</div>
                        </a>
                    </li>
                    <!-- Experience -->
                    <li class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Experience" ? "active" : "")">
                        <a href="~/Experience/Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-briefcase-alt-2"></i>
                            <div class="text-truncate" data-i18n="Experience">Experience</div>
                        </a>
                    </li>
                    <!-- Education -->
                    <li class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Education" ? "active" : "")">
                        <a href="~/Education/Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-book-reader"></i>
                            <div class="text-truncate" data-i18n="Education">Education</div>
                        </a>
                    </li>
                    <!-- Project -->
                    <li class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Project" ? "active" : "")">
                        <a href="~/Project/Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-bookmarks"></i>
                            <div class="text-truncate" data-i18n="Project">Projects</div>
                        </a>
                    </li>
                    <!-- Testimonial -->
                    <li class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Testimonial" ? "active" : "")">
                        <a href="~/Testimonial/Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-comment-detail"></i>
                            <div class="text-truncate" data-i18n="Testimonial">Testimonial</div>
                        </a>
                    </li>
                    <!-- Contact -->
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons bx bx-comment"></i>
                            <div class="text-truncate" data-i18n="Contact">Contact</div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item @(ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Contact"  ? "active" : "")">
                                <a href="~/Contact/Index" class="menu-link">
                                    <div class="text-truncate" data-i18n="Contact">Contact</div>
                                </a>
                            </li>
                            <li class="menu-item @(ViewContext.RouteData.Values["action"].ToString() == "Messages"  && ViewContext.RouteData.Values["controller"].ToString() == "Contact" ? "active" : "")">
                                <a href="~/Contact/Messages" class="menu-link">
                                    <div class="text-truncate" data-i18n="Contact">Messages</div>
                                    <span class="badge rounded-pill bg-info ms-auto">5</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Category -->
                    <li class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Category" ? "active" : "")">
                        <a href="~/Category/Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-category"></i>
                            <div class="text-truncate" data-i18n="Categories">Categories</div>
                        </a>
                    </li>
                </ul>
            </aside>
            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->

                <nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme"
                     id="layout-navbar">
                    <div class="layout-menu-toggle navbar-nav align-items-xl-center me-4 me-xl-0 d-xl-none">
                        <a class="nav-item nav-link px-0 me-xl-6" href="javascript:void(0)">
                            <i class="bx bx-menu bx-md"></i>
                        </a>
                    </div>
                    <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
                        <!-- Search -->
                        <div class="navbar-nav align-items-center">
                            <div class="nav-item d-flex align-items-center">
                                <span>Portfolio Project</span>
                            </div>
                        </div>
                        <!-- /Search -->
                        <ul class="navbar-nav flex-row align-items-center ms-auto">
                            <!-- Place this tag where you want the button to render. -->
                            <li class="nav-item lh-1 me-4">
                                <a class="github-button"
                                   href="https://github.com/yavuzyazici/egitim-fasli/tree/main/MyPortfolio"
                                   data-icon="octicon-star"
                                   data-size="large"
                                   data-show-count="true"
                                   aria-label="Star /MyPortfolio on GitHub">Star</a>
                            </li>
                            <!-- User -->
                            <li class="nav-item navbar-dropdown dropdown-user dropdown">
                                <a class="nav-link dropdown-toggle hide-arrow p-0"
                                   href="javascript:void(0);"
                                   data-bs-toggle="dropdown">
                                    <div class="avatar avatar-online">
                                        <img src="https://avatars.githubusercontent.com/u/95548778?v=4" alt="Profile Picture" class="w-px-40 h-auto rounded-circle" />
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="d-flex">
                                                <div class="flex-shrink-0 me-3">
                                                    <div class="avatar avatar-online">
                                                        <img src="https://avatars.githubusercontent.com/u/95548778?v=4" alt="Profile Picture for settings detail" class="w-px-40 h-auto rounded-circle" />
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-0">John Doe</h6>
                                                    <small class="text-muted">Admin</small>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider my-1"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bx bx-user bx-md me-3"></i><span>My Profile</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#"> <i class="bx bx-cog bx-md me-3"></i><span>Settings</span> </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider my-1"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="javascript:void(0);">
                                            <i class="bx bx-power-off bx-md me-3"></i><span>Log Out</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <!--/ User -->
                        </ul>
                    </div>
                </nav>

                <!-- / Navbar -->
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->

                    <div class="container-xxl flex-grow-1 container-p-y">
                        @{
                            var errors = TempData["Errors"] as List<string>;
                        }
                        @if (errors != null)
                        {
                            <div class="bs-toast toast fade show bg-danger position-fixed top-0 end-0 m-3" role="alert" aria-live="assertive" aria-atomic="true">
                                <div class="toast-header">
                                    <i class="bx bx-bell me-2"></i>
                                    <div class="me-auto fw-medium">Bootstrap</div>
                                    <small>11 mins ago</small>
                                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                                </div>
                                @foreach (var error in errors)
                                {
                                    <ol class="list-group list-group-flush">
                                        <li class="list-group-item list-group-item-action text-white">@error</li>
                                    </ol>
                                }
                            </div>
                        }
                        @RenderBody()
                    </div>


                    <!-- / Content -->
                    <!-- Footer -->
                    <footer class="content-footer footer bg-footer-theme">
                        <div class="container-xxl">
                            <div class="footer-container d-flex align-items-center justify-content-between py-4 flex-md-row flex-column">
                                <div class="text-body">
                                    ©@DateTime.Now.Year, made with ❤️ by
                                    <a href="https://yavuzyazici.com" target="_blank" class="footer-link">Yavuz Yazici</a>
                                </div>
                                <div class="d-none d-lg-inline-block">
                                    <a href="~/" target="_blank" class="footer-link me-4">WebSite</a>
                                    <a href="https://github.com/yavuzyazici/egitim-fasli/tree/main/MyPortfolio" target="_blank" class="footer-link me-4">Github</a>
                                    <a href="javascript:void(0)" class="btn btn-sm btn-outline-danger"><i class="bx bx-log-out-circle me-1"></i>Logout</a>
                                </div>
                            </div>
                        </div>
                    </footer>
                    <!-- / Footer -->

                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>

        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->
    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->

    <script src="~/wwwroot/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/wwwroot/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/wwwroot/assets/vendor/js/bootstrap.js"></script>
    <script src="~/wwwroot/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/wwwroot/assets/vendor/js/menu.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js" integrity="sha512-KFHXdr2oObHKI9w4Hv1XPKc898mE4kgYx58oqsc/JqqdLMDI4YjOLzom+EMlW8HFUd0QfjfAvxSL6sEq/a42fQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" integrity="sha512-xq+Vm8jC94ynOikewaQXMEkJIOBp7iArs3IhFWSWdRT3Pq8wFz46p+ZDFAR7kHnSFf+zUv52B3prRYnbDRdgog==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>


    <!-- endbuild -->
    <!-- Vendors JS -->
    <script src="~/wwwroot/assets/vendor/libs/apex-charts/apexcharts.js"></script>

    <!-- Main JS -->
    <script src="~/wwwroot/assets/js/main.js"></script>

    <!-- Page JS -->
    <script src="~/wwwroot/assets/js/dashboards-analytics.js"></script>

    <!-- Place this tag before closing body tag for github widget button. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>
