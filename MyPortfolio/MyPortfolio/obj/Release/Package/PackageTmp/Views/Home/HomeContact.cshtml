@model MyPortfolio.Models.MyPortfolioTblContact
<div class="row contact-top">
    <div class="column lg-12">
        <h2 class="text-pretitle">
            @Model.Title
        </h2>

        <p class="h1">
            @Model.Description
        </p>
    </div>
</div>

<div class="row contact-bottom">
    <div class="column lg-3 md-5 tab-6 stack-on-550 contact-block">
        <h3 class="text-pretitle">Contact Informations</h3>
        <p class="contact-links">
            <a href="mailto:@Model.Email" class="mailtoui">@Model.Email</a> <br>
            <a href="tel:@Model.Phone">@Model.Phone</a>
        </p>
    </div>
    <div class="column lg-4 md-5 tab-6 stack-on-550 contact-block">
        <h3 class="text-pretitle">Social Media</h3>
        <ul class="contact-social">
            @Html.Action("HomeSocialMedia", "Home")
        </ul>
    </div>
    <div class="column lg-4 md-12 contact-block data-animate-el">
        <a href="#modal-message" id="openModalMessageBtn" data-toggle="#modal-message" class="mailtoui btn btn--medium u-fullwidth contact-btn folio-list__item-link-message">Greet.</a>
    </div>
</div> 

<div id="modal-message"  hidden>
    <div class="modal-popup">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <!-- Name Field -->
            <div class="nice-form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="Name" placeholder="Your name" required />
            </div>

            <!-- Email Field -->
            <div class="nice-form-group">
                <label for="email">Email</label>
                <input type="text" id="email" name="Email" placeholder="Your email" required />
            </div>

            <!-- Message Field -->
            <div class="nice-form-group">
                <label for="message">Message</label>
                <textarea id="message" name="MessageContent" placeholder="Your message" style="height:253px; width: 761px;" required></textarea>
            </div>

            <!-- Submit Button -->
            <div>
                <button type="submit" class="btn btn--medium u-fullwidth contact-btn">Send Message</button>
            </div>
        }
    </div>
</div>