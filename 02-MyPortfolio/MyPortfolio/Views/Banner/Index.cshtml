@model MyPortfolio.Models.MyPortfolioTblBanner

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout/AdminLayout.cshtml";
}


<div class="card">
    <div class="d-flex justify-content-between align-items-center p-3">
        <h5 class="card-header mb-0">
            Banner
        </h5>
    </div>

    <!-- UpdateBannerModal -->
    <div class="modal fade" id="updateBanner" tabindex="-1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Banner</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                @using (Html.BeginForm("Update", "Banner", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="row">
                            <div class="col mb-6">
                                <input class="form-control" type="hidden" name="BannerId" id="updateBannerId" placeholder="Id" readonly="">
                                <div class="mb-4">
                                    <label for="Title" class="form-label">Banner Title</label>
                                    <input type="text" class="form-control" name="Title" id="updateBannerTitle" placeholder="Hello World, MyPortfolio...">
                                </div>
                                <div class="mb-4">
                                    <label for="updateBannerDesc" class="form-label">Banner Description</label>
                                    <textarea class="form-control" name="Description" id="updateBannerDesc" placeholder="Write your description text to here."></textarea>
                                </div>


                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-warning">Update</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Banner Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                    <tr>
                        <td><i class="bx bx-flag bx-md text-primary me-4"></i> <span>@Model.BannerId</span></td>
                        <td>@Model.Title</td>
                        <td>@Model.Description.Substring(0, 15)...</td>
                        <td>
                            <button type="button" class="btn btn-outline-primary" onclick="showUpdateModal(@Model.BannerId,'@Model.Title', '@Html.Raw(HttpUtility.JavaScriptStringEncode(@Model.Description))')">
                                <span class="tf-icons bx bx-edit-alt bx-18px me-2"></span>Update
                            </button>
                        </td>
                    </tr>
            </tbody>
        </table>
        <br />
    </div>
</div>
<script>
    function showUpdateModal(bannerId, bannerTitle, bannerDesc) {
        // Modal içindeki gizli input'a ID değerini aktarır

        $('#updateBannerId').val(bannerId);
        $('#updateBannerTitle').val(bannerTitle)
        $('#updateBannerDesc').val(bannerDesc)

        // Modalı gösterir
        $('#updateBanner').modal('show');
    }
</script>
