@using Cental.DtoLayer.UserDtos
@model UserRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    @@include('./layouts/head.html')
    @@include('./layouts/head-bottom-link.html')
</head>

<body>
    <!-- [ auth-signup ] start -->
    <div class="auth-wrapper">
        <div class="auth-content text-center">
            <img src="/admin-theme/dist/assets/images/logo.png" alt="" class="img-fluid mb-4">
            <div class="card borderless">
                <div class="row align-items-center text-center">
                    <div class="col-md-12">
                        <form method="post">
                            <div class="card-body">
                                <h4 class="f-w-400">Sign up</h4>
                                <hr>
                                <div class="form-group mb-3">
                                    <input type="text" asp-for="FirstName" class="form-control" id="FirstName" required placeholder="FirstName">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" asp-for="LastName" class="form-control" id="LastName" required placeholder="LastName">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" asp-for="UserName" class="form-control" id="Username" required placeholder="Username">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="email" asp-for="Email" class=" form-control" id="Email" required placeholder="Email address">
                                </div>
                                <div class="form-group mb-4">
                                    <input type="password" asp-for="Password" class=" form-control" id="Password" required placeholder="Password">
                                </div>
                                <div class="form-group mb-4">
                                    <input type="password" asp-for="PasswordAgain" class=" form-control" id="PasswordAgain" required placeholder="Password Again">
                                </div>
                                <p style="color:red">
                                    @Html.ValidationSummary()
                                </p>
                                <button class="btn btn-primary btn-block mb-4">Sign up</button>
                                <hr>
                                <p class="mb-2">Already have an account? <a href="/Login/Index" class="f-w-400">SignIn</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ auth-signup ] end -->
    <!-- Required Js -->
    <script src="/admin-theme/dist/assets/js/vendor-all.min.js"></script>
    <script src="/admin-theme/dist/assets/js/plugins/bootstrap.min.js"></script>

    <script src="/admin-theme/dist/assets/js/pcoded.min.js"></script>
    @@include('./layouts/footer-bottom-link.html')

</body>

</html>
