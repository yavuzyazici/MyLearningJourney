@using Cental.DtoLayer.BranchDtos
@model List<UIBranchDto>
@*
    _ContactBranchListComponent
*@

@foreach(var branch in Model)
{
    <div class="bg-white rounded p-4 mb-4">
        <h4 class="mb-3">@branch.Title</h4>
        <div class="d-flex align-items-center flex-shrink-0 mb-3">
            <p class="mb-0 text-dark me-2">Address:</p><i class="fas fa-map-marker-alt text-primary me-2"></i><p class="mb-0">@branch.Address</p>
        </div>
        <div class="d-flex align-items-center">
            <p class="mb-0 text-dark me-2">Telephone:</p><i class="fa fa-phone-alt text-primary me-2"></i><p class="mb-0">@branch.Telephone</p>
        </div>
    </div>
}