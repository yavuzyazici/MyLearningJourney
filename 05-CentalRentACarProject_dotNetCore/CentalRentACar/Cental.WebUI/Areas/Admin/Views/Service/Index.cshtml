@using Cental.DtoLayer.ServiceDtos
@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Layout.cshtml";
    int count = 1;
}

<div class="card-header">
    <h5>Service</h5>
    <div class="card-header-right">
        <div class="btn-group card-option">
            <button type="button" class="btn dropdown-toggle btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="feather icon-more-horizontal"></i>
            </button>
            <ul class="list-unstyled card-option dropdown-menu dropdown-menu-right">
                <li class="dropdown-item full-card"><a href="#!"><span><i class="feather icon-maximize"></i> maximize</span><span style="display:none"><i class="feather icon-minimize"></i> Restore</span></a></li>
                <li class="dropdown-item minimize-card"><a href="#!"><span><i class="feather icon-minus"></i> collapse</span><span style="display:none"><i class="feather icon-plus"></i> Expand</span></a></li>
            </ul>
        </div>
    </div>
</div>
<div class="card-body">

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
        </tr>
        @foreach (var service in Model)
        {
            <tr>
                <td>@count</td>
                <td>@service.Title</td>
                <td>@service.Description</td>
                <td><a asp-action="DeleteService" asp-route-id="@service.ServiceId" asp-area="Admin" class="btn btn-danger">Delete</a></td>
                <td><a asp-action="UpdateService" asp-route-id="@service.ServiceId" asp-area="Admin" class="btn btn-info">Update</a></td>
            </tr>
            count++;
        }
    </table>

    <a asp-action="CreateService" asp-controller="Service" asp-area="Admin" class="btn btn-primary">Add New Service</a>
</div>
