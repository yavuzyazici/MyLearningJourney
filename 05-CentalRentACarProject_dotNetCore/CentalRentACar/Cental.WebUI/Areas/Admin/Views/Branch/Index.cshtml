@using Cental.DtoLayer.BranchDtos
@model List<ResultBranchDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Layout.cshtml";
}

<div class="card-header">
    <h5>Branch</h5>
    <div class="card-header-right">
        <div class="btn-group card-option">
            <button type="button" class="btn dropdown-toggle btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="feather icon-more-horizontal"></i>
            </button>
            <ul class="list-unstyled card-option dropdown-menu dropdown-menu-right">
                <li class="dropdown-item full-card"><a href="#!"><span><i class="feather icon-maximize"></i> maximize</span><span style="display:none"><i class="feather icon-minimize"></i> Restore</span></a></li>
                <li class="dropdown-item minimize-card"><a href="#!"><span><i class="feather icon-minus"></i> collapse</span><span style="display:none"><i class="feather icon-plus"></i> Expand</span></a></li>
            </ul>
        </div>
    </div>
</div>
<div class="card-body">

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var branch in Model)
        {
            <tr>
                <td>@branch.BranchId</td>
                <td>@branch.Title</td>
                <td>@branch.Address</td>
                <td>@branch.Telephone</td>
                <td><a asp-action="DeleteBranch" asp-route-id="@branch.BranchId" asp-area="Admin" class="btn btn-info">Delete</a></td>
                <td><a asp-action="UpdateBranch" asp-route-id="@branch.BranchId" asp-area="Admin" class="btn btn-info">Update</a></td>
            </tr>
        }
    </table>

    <a asp-action="CreateBranch" asp-controller="Branch" asp-area="Admin" class="btn btn-primary">Add New Branch</a>
</div>
