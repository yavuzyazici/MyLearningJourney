@model List<ImdbViewModel.Movie>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<h1>Imdb Top 250</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Movie Poster</th>
        <th>Movie</th>
        <th>Start Year</th>
        <th>Imdb Rating</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@count</td>
            <td><img src="@item.primaryImage" width="100" height="150" /></td>
            <td><a href="@item.url" target="_blank">@item.originalTitle</a></td>
            <td>@item.startYear</td>
            <td>@item.averageRating</td>
        </tr>
        count++;
    }
</table>
