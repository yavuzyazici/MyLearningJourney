@using MongoDbProject.Dtos.EventDtos
@model List<ResultEventDto>
@*
    _HomeEventComponent
*@
@{
    int delay = 1;
}

<div class="container-fluid events py-5 bg-light">
    <div class="container py-5">
        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
            <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Our Events</h4>
            <h1 class="mb-5 display-3">Our Upcoming Events</h1>
        </div>
        <div class="row g-5 justify-content-center">
            @foreach (var events in Model)
            {
                <div class="col-md-6 col-lg-6 col-xl-4 wow fadeIn" data-wow-delay="0.@(delay)s">
                    <div class="events-item bg-primary rounded">
                        <div class="events-inner position-relative">
                            <div class="events-img overflow-hidden rounded-circle position-relative">
                                <img src="@events.ImageUrl" class="img-fluid w-100 rounded-circle" alt="Image">
                                <div class="event-overlay">
                                    <a href="@events.ImageUrl" data-lightbox="event-1"><i class="fas fa-search-plus text-white fa-2x"></i></a>
                                </div>
                            </div>
                            <div class="px-4 py-2 bg-secondary text-white text-center events-rate">@events.ShortDate</div>
                            <div class="d-flex justify-content-between px-4 py-2 bg-secondary">
                                <small class="text-white"><i class="fas fa-calendar me-1 text-primary"></i> @events.Time</small>
                                <small class="text-white"><i class="fas fa-map-marker-alt me-1 text-primary"></i> @events.Location</small>
                            </div>
                        </div>
                        <div class="events-text p-4 border border-primary bg-white border-top-0 rounded-bottom">
                            <a href="#" class="h4">@events.Title</a>
                            <p class="mb-0 mt-3">@events.Description</p>
                        </div>
                    </div>
                </div>
                delay += 2;
            }
        </div>
    </div>
</div>
