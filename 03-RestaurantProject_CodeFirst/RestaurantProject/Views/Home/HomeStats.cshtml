@{
    ViewBag.Title = "HomeStats";
}

<section id="stats" class="stats section dark-background">

    <img src="/assets/web/assets/img/stats-bg.jpg" alt="" data-aos="fade-in">

    <div class="container position-relative" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.ProductCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Product Count</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.CategoryCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Category Count</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.EventCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Event Count</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.ChefCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Chef Count</p>
                </div>
            </div><!-- End Stats Item -->

        </div>

    </div>

</section>