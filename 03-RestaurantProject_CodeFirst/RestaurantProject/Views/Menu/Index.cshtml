@model List<RestaurantProject.Models.RestaurantProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="nav-align-top">
    <ul class="nav nav-pills flex-column flex-md-row mb-6">
        <li class="nav-item"><a class="nav-link active" href="javascript:void(0);"><i class="bx bx-sm bx-food-menu me-1_5"></i> Booking</a></li>
    </ul>
</div>
<div class="card mb-6">
    <div class="card-header text-end">
        <div class="tooltip-btn d-inline-block">
            <a href="/Menu/AddProduct" class="btn btn-primary">
                <i class='bx bx-plus-circle'></i>
            </a>
            <span class="tooltip-text">Add New Value</span>
        </div>
    </div>

    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price$</td>
                <td>@product.RestaurantCategory.CategoryName</td>
                <td>
                    <div class="tooltip-btn">
                        <a href="/Menu/Delete/@product.RestaurantProductId" class="btn btn-danger">
                            <i class="bx bx-trash"></i>
                        </a>
                        <span class="tooltip-text">Delete</span>
                    </div>
                </td>
                <td>
                    <div class="tooltip-btn">
                        <a href="/Menu/Update/@product.RestaurantProductId" class="btn btn-primary">
                            <i class='bx bx-pencil'></i>
                        </a>
                        <span class="tooltip-text">Update</span>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>


