@model TravelTripProject.Models.Classes.Blog
@{
    ViewBag.Title = "AddBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Blog Detail</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="Blog Image" />
                        </div>
                    }

                    <div class="form-group mb-3">
                        @Html.LabelFor(x => x.Title, new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @value = Model.Title })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(x => x.CreationDate, new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.CreationDate, new { @class = "form-control", @value = Model.CreationDate.ToString("yyyy-MM-dd") })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(x => x.ImageUrl, new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @value = Model.ImageUrl })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(x => x.Content, new { @class = "form-label" })
                        @Html.TextAreaFor(x => x.Content, new { @class = "form-control", @rows = "6", @value = Model.Content })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>