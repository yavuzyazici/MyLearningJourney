@model List<TravelTripProject.Models.Classes.Blog>
<div class="padding">
    <h4>This Week's Top 10</h4>
    <ul class="list list-pad">
        @{ int count = 0;}
        @foreach (var blog in Model)
        {

            <li class="list-bg@(count % 2 == 1 ? "" : "1") "><span>@{count++;} @count.</span><a href="/Blog/BlogDetail/@blog.Id">@blog.Title</a></li>
        }
    </ul>
    <a href="/Blog/Index" class="link1">See all blogs</a>
</div>