@model List<TravelTripProject.Models.Classes.Blog>
<div class="con-bot">
    @foreach (var blog in Model)
    {
        <div class="@(blog == Model.Last() ? "right" : "left")">
            <div class="bot-left">
                <img src="@blog.ImageUrl" alt="" />
            </div>
            <div class="left-text">
                <h4>@blog.Title</h4>
                <p>@blog.Content.Substring(0,30)</p>
                <p><a href="/Blog/BlogDetail/@blog.Id"><span class="read">Read More</span></a></p>
            </div>
        </div>
    }
    <div class="clear"></div>
</div>
